{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "lib": [
            "es2020"
        ],
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node"
        ],
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ]
}